{% import "_includes/forms" as forms %}

<div class="field">
  {{forms.select({
      id: id ~ "-select",
      name: name ~ "[selected]",
      options: options,
      value: value.selected ?? ""
    })
  }}
</div>

<div class="field">
  {{forms.textarea({
      id: id,
      name: name ~ "[edited]",
      value: value.edited ?? "",
      class: "nicetext code"
    })
  }}
</div>
